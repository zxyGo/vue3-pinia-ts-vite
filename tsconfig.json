{
	"compilerOptions": {
		"target": "esnext",
		"useDefineForClassFields": true,
		"module": "esnext",
		"moduleResolution": "node",
		"strict": true,
		"jsx": "preserve",
		"sourceMap": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"lib": ["esnext", "dom"],
		"skipLibCheck": true,
		"baseUrl": ".",
		"types": [
			"node"
		],
		"paths": {
			"@/*": [
				"src/*"
			],
			"_c/*": [
				"src/components/*"
			],
			"_v/*": [
				"src/views/*"
			]
		}
	},
	"include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "vite.config.ts"],
	"references": [{ "path": "./tsconfig.node.json" }]
}
